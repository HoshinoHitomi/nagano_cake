<table>
  <tr>
    <th>ジャンル検索</th>
  </tr>
  <% @genres.each do |genre| %>
  <tr>
    <td><%= genre.name %></td>
  </tr>
  <% end %>
</table>

<h1>商品一覧</h1>

<p>(全<%= @items.count %>件)</p>

<% @items.each do |item| %>

  <%= attachment_image_tag item, :image, :fill, 150, 120 %>

  <%= link_to item.name, item_path(item) %>

  <%= item.price %>

<% end %>