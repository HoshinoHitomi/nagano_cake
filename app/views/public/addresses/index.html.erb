<div class="container mt-4">

  <h3>配送先登録/一覧</h3>

  <div class="row m-4">

    <div class="col-10">
      <%= form_with model: @address, url: addresses_path, local:true do |f| %>

      <div class="form-horizontal">
        <div class="form-group">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: 'col-4' %>
          <%= f.text_field :postal_code, placeholder: '0000000', class: 'col-3' %>
        </div>

        <div class="form-group">
          <%= f.label :address, "住所", class: 'col-4' %>
          <%= f.text_field :address, placeholder: '東京都渋谷区代々木神園町0-0', class: 'col-6' %>

        </div>

        <div class="form-group">
          <%= f.label :name, "宛名", class: 'col-4' %>
          <%= f.text_field :name, placeholder: '令和道子', class: 'col-3' %>
          <%= f.submit "新規登録", class: 'btn btn-success float-right col-3' %>

        </div>


        <% end %>
      </div>
      <table class="table table-bordered mt-4">
        <tr>
          <th width="100">郵便番号</th>
          <th width="300">住所</th>
          <th width="100">宛名</th>
          <th width="300"></th>
        </tr>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集", edit_address_path(address), class: 'btn btn-success col-5 mr-2' %>
            <%= link_to "削除", address_path(address), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger col-5 ml-2' %>
          </td>
        </tr>
      <% end %>
      </table>

    </div>

  </div>

</div>
