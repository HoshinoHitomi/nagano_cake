<h2>注文履歴一覧</h2>

<table>
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </tr>

  <% @orders.zip(@order_items) do |order, order_item| %>
  <tr>
    <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
    <td><%= order.customer.name %></td>
    <td><%= order_item.amount %></td>
    <td><%= order.status_i18n %></td>
  </tr>
  <% end %>
</table>