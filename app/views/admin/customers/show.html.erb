<div class="container mt-4">
  <h3><%= @customer.name %>さんの会員詳細</h3>

  <div class="row m-4">
    <div class="col-2">
      <p>会員ID</p>
      <p>氏名</p>
      <p>フリガナ</p>
      <p>郵便番号</p>
      <p>住所</p>
      <p>電話番号</p>
      <p>メールアドレス</p>
      <p>会員ステータス</p>

    </div>

    <div class="col">
      <p><%= @customer.id %></p>
      <p><%= @customer.last_name %><%= @customer.first_name %></p>
      <p><%= @customer.last_name_kana %><%= @customer.first_name_kana %></p>
      <p><%= @customer.postal_code %></p>
      <p><%= @customer.address %></p>
      <p><%= @customer.telephone_number %></p>
      <p><%= @customer.email %></p>
      <p><%= @customer.is_active ? "有効" : "退会" %></p>
    </div>
  </div>

  <%= link_to "編集する", edit_admin_customer_path(@customer), class: 'btn btn-success' %>

  <%= link_to "注文履歴一覧を見る", admin_root_path(order: 'customer'), class: 'link btn btn-primary' %>
</div>