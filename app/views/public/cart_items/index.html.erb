<h1>Public::CartItems#index</h1>
<p>Find me in app/views/public/cart_items/index.html.erb</p>

<% if @cart_item.blank? %>
    <h1>カートが空です</h1>
    <% else %>

    <%= link_to "カートを空にする", destroy_all_cart_item_path(@cart_item), method: :delete %>

    <table>
        <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
        </tr>

        <% @cart_item.each do |cart_item| %>
        <tr>
            <th><%= cart_item[:name] %></th>
            <th><%= cart_item[:price] %></th>

            <%= form_with url: cart_item_path(@cart_item), method: :patch, local:true do |f| %>
                <th>
                    <%= f.number_field :amount, value: cart_item[:amount], min: 1 %>
                    <%= hidden_field_tag :item_id, cart_item[:item_id] %>
                    <%= f.submit "変更" %>
                </th>
            <% end %>

            <th><%= cart_item[:sub_total] %></th>

            <%= form_with url: cart_item_path(@cart_item), method: :delete, local:true do |f| %>
                <th>
                    <%= hidden_field_tag :item_id, cart_item[:item_id] %>
                    <%= f.submit "削除する" %>
                </th>
            <% end %>
        </tr>
        <% end %>
    </table>
    <%= @cart_item_total_price %>

<% end %>

