<div class="container mt-4">

  <h3>商品詳細</h3>

  <div class="row m-5">

    <div class="col-4">
      <%= attachment_image_tag @item, :image, :fill, 300, 240 %>
    </div>

    <div class="col-4">
      <table class="table table-borderless">
        <tr>
          <td>商品名</td>

          <td><%= @item.name %></td>
        </tr>

        <tr>
          <td>商品説明</td>

          <td><%= @item.introduction %></td>
        </tr>

        <tr>
          <td>ジャンル</td>

          <td><%= @item.genre.name %></td>
        </tr>

        <tr>
          <td>
            税込価格<br>
            (税抜価格)
          </td>

          <td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
        </tr>

        <tr>
          <td>販売ステータス</td>

          <td><%= @item.is_active ? '販売中' : '販売停止中' %></td>
        </tr>
      </table>

      <%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success col-5' %>

    </div>
  </div>
</div>