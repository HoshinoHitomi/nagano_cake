<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="border-bottom">
      <div class="container">

        <nav class="navbar navbar-expand-lg navbar-light">

          <h1><%= link_to "NaganoCake", root_path %></h1>
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>

                <li class="nav-item">
                  <%= link_to '商品一覧', admin_items_path, class: 'btn btn-outline-secondary mr-4' %>
                </li>

                <li class="nav-item">
                  <%= link_to '会員一覧', admin_customers_path, class: 'btn btn-outline-secondary mr-4' %>
                </li>

                <li class="nav-item">
                  <%= link_to '注文履歴一覧', admin_root_path, class: 'btn btn-outline-secondary mr-4' %>
                </li>

                <li class="nav-item">
                  <%= link_to 'ジャンル一覧', admin_genres_path, class: 'btn btn-outline-secondary mr-4' %>
                </li>

                <li class="nav-item">
                  <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'btn btn-outline-secondary' %>
                </li>

              <% elsif customer_signed_in? %>

                <p>ようこそ、<%= current_customer.last_name %>さん！</p>

                <li class="nav-item">
                  <%= link_to 'マイページ', customers_path, class: 'btn btn-outline-secondary mr-4' %>
                </li>

                <li class="nav-item">
                  <%= link_to "商品一覧", items_path, class: 'btn btn-outline-secondary mr-4' %>
                </li>

                <li>
                  <%= link_to "カート", cart_items_path, class: 'btn btn-outline-secondary mr-4' %>
                </li>

                <li class="nav-item">
                  <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: 'btn btn-outline-secondary' %>
                </li>

              <% else %>

                <li class="nav-item">
                  <%= link_to "About", about_path, class: 'btn btn-outline-secondary mr-4' %>
                </li>

                <li class="nav-item">
                  <%= link_to "商品一覧", items_path, class: 'btn btn-outline-secondary mr-4' %>
                </li>

                <li class="nav-item">
                  <%= link_to "新規登録", new_customer_registration_path, class: 'btn btn-outline-secondary mr-4' %>
                </li>

                <li class="nav-item">
                  <%= link_to "ログイン", new_customer_session_path, class: 'btn btn-outline-secondary' %>
                </li>

              <% end %>
            </ul>
        </nav>
      </header>

      <%= yield %>

      <footer>
        <p>footer</p>
      </footer>

      </div>
  </body>
</html>
