<div class="container mt-4">
  <%= render 'layouts/error_messages', model: @genre %>
  <h3>ジャンル編集</h3>

  <%= form_with model: @genre, url: admin_genre_path, local:true do |f| %>

    <div class="row m-4">
      <%= f.label :genre, "ジャンル名", class: 'col-2' %>
      <%= f.text_field :name %>

      <%= f.submit "変更を保存", class: 'btn btn-success col-2 ml-5' %>
    </div>

  <% end %>
</div>