<div class="container mt-4">
  <%= render 'layouts/error_messages', model: @address %>

  <h3>配送先編集</h3>

    <%= form_with model: @address, url: address_path(@address), local:true do |f| %>

      <div class="form-horizontal m-4">
        <div class="form-group">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: 'col-3' %>
          <%= f.text_field :postal_code, placeholder: '0000000', class: 'col-3' %>
        </div>

        <div class="form-group">
          <%= f.label :address, "住所", class: 'col-3' %>
          <%= f.text_field :address, placeholder: '東京都渋谷区代々木神園町0-0', class: 'col-6' %>
        </div>

        <div class="form-group">
          <%= f.label :name, "宛名", class: 'col-3' %>
          <%= f.text_field :name, placeholder: '令和道子', class: 'col-3' %>

        <%= f.submit "変更内容を保存", class: 'btn btn-success float-right col-3' %>
        </div>

      </div>
    <% end %>

</div>