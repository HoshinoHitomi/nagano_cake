<h1>ジャンル一覧・追加</h1>

<%= form_with model: @new_genre, url: admin_genres_path, local:true do |f| %>
  <%= f.text_field :name, placeholder: 'ジャンル名' %>
  <%= f.submit "新規登録" %>
<% end %>

<table>
  <tr>
    <th>ジャンル</th>
  </tr>

  <% @genres.each do |genre| %>
  <tr>
    <td><%= genre.name %></td>
    <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
  </tr>
  <% end %>
</table>