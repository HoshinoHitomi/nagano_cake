<div class="container mt-4">

  <h3>会員一覧</h3>

  <table class="table m-4">
    <tr class="thead-light">
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>

    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.name, admin_customer_path(customer) %></td>
      <td><%= customer.email %></td>
      <td><%= customer.is_active ? "有効" : "退会" %></td>
    </tr>
    <% end %>
  </table>
</div>

<%= paginate @customers %>