<div class="container mt-4">
  <h3>管理者ログイン</h3>

    <div class="row m-4">

      <div class="col-3"></div>

        <div class="col-6">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="form-horizontal">
              <div class="form-group">
                <%= f.label :email, "メールアドレス", class: 'col-4' %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'example@example', class: 'col-6' %>
              </div>

              <div class="form-group">
                <%= f.label :password, "パスワード", class: 'col-4' %>
                <%= f.password_field :password, autocomplete: "current-password", class: 'col-6' %>
              </div>

              <div class="form-group">
                <%= f.submit "ログイン", class: 'btn btn-primary col-3' %>
              </div>
            </div>

        </div>
          <% end %>

  </div>

      <div class="col-3"></div>

</div>