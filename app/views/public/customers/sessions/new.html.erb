<div class="container mt-4">
  <h2>ログイン</h2>

  <div class="form-horifontal m-5">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <h3>会員の方はこちらからログイン</h3>

      <div class="form-group">
        <%= f.label :email, "メールアドレス", class: 'mr-3' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-4' %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード", class: 'mr-5' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'col-4' %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <h3>会員登録がお済みでない方</h3>
    <div class="row m-5">
      <%= render "public/customers/shared/links" %>
    </div>

  </div>

</div>
