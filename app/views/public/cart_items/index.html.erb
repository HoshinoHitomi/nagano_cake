<h1>Public::CartItems#index</h1>
<p>Find me in app/views/public/cart_items/index.html.erb</p>

<% if @cart_item.blank? %>
    <h1>カートが空です</h1>
<% end %>

<table>
    <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
    </tr>

    <% @cart_item.each do |cart_item| %>
    <tr>
        <th><%= cart_item[:name] %></th>
        <th><%= cart_item[:price] %></th>
        <th><%= cart_item[:amount] %></th>
        <th><%= cart_item[:sub_total] %></th>
    </tr>
    <% end %>
</table>
<%= @cart_item_total_price %>