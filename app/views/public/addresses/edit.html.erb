<h1>配送先編集</h1>

<%= form_with model: @address, url: address_path(@address), local:true do |f| %>

  <h4>郵便番号(ハイフンなし)</h4>
  <%= f.text_field :postal_code, placeholder: '0000000' %>

  <h4>住所</h4>
  <%= f.text_field :address, placeholder: '東京都渋谷区代々木神園町0-0' %>

  <h4>宛名</h4>
  <%= f.text_field :name, placeholder: '令和道子' %>

  <%= f.submit "変更内容を保存" %>
<% end %>