<h1>注文情報入力</h1>

<%= form_with model: @order, url: confirm_order_path, method: :post, local:true do |f| %>

    <h2>支払方法</h2>
        <%= f.radio_button :payment, :credit, checked: true %>
        <%= f.label :credit %>

        <%= f.radio_button :payment, :bank %>
        <%= f.label :bank %>

    <h2>お届け先</h2>
        <%= f.radio_button :address, :address_1, checked: true %>
        <%= f.label :address, "ご自身の住所" %><br>

        〒<%= current_customer.postal_code %>
        <%= current_customer.address %><br>
        <%= current_customer.name %><br>


        <%= f.radio_button :address, :address_2 %>
        <%= f.label :address, "登録済住所から選択" %><br>

        <%= f.collection_select(:address_id, @addresses, :id, :address) %><br>


        <%= f.radio_button :address, :address_3 %>
        <%= f.label :address, "新しいお届け先" %><br>

        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code, placeholder: "000000" %><br>

        <%= f.label :address, "住所" %>
        <%= f.text_field :address %><br>

        <%= f.label :name, "宛名" %>
        <%= f.text_field :name %><br>


    <%= f.submit "確認画面へ進む" %>
<% end %>