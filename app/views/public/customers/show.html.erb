<div class="container mt-4">
  <h3>マイページ</h3>

  <div class="row m-4">

    <div class="col-8">

    <span style="font-weight:bolder">登録情報</span>

      <%= link_to "編集する", edit_customers_path, class: 'btn btn-success ml-4'%>

      <table class="table table-bordered mt-3">
        <tr>
          <th width="200" class="thead-light">氏名</th>
          <td><%= current_customer.last_name %><%= current_customer.first_name %></td>
        </tr>

        <tr>
          <th>カナ</th>
          <td><%= current_customer.last_name_kana %><%= current_customer.first_name_kana %></td>
        </tr>

        <tr>
          <th>郵便番号</th>
          <td><%= current_customer.postal_code %></td>
        </tr>

        <tr>
          <th>住所</th>
          <td><%= current_customer.address %></td>
        </tr>

        <tr>
          <th>電話番号</th>
          <td><%= current_customer.telephone_number %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td><%= current_customer.email %></td>
        </tr>

      </table>
    </div>
  </div>

  <div class="row m-4">

      <div class="d-flex flex-column">
        <div class="box mb-4">
          <span style="font-weight:bolder">配送先</span>
          <%= link_to "一覧を見る", addresses_path, class: 'btn btn-primary ml-4' %>
        </div>

        <div class="box">
          <span style="font-weight:bolder">注文履歴</span>
          <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary ml-2' %>
        </div>

    </div>

  </div>

</div>