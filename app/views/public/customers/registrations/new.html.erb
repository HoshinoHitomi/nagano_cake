<div class="container mt-4">

  <h2>新規会員登録</h2>

<div class="form-horifontal m-5">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/customers/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :name, "氏名", class: 'col-3' %>
        <%= f.label :last_name, "(姓)", class: 'mr-3' %>
        <%= f.text_field :last_name, placeholder: "令和", class: 'col-3 mr-5' %>

        <%= f.label :first_name, "(名)", class: 'mr-3' %>
        <%= f.text_field :first_name, placeholder: "道子", class: 'col-3' %>
    </div>

    <div class="form-group">
      <%= f.label :name_kana, "フリガナ", class: 'col-3' %>
        <%= f.label :last_name_kana, "(セイ)" %>
        <%= f.text_field :last_name_kana, placeholder: "レイワ", class: 'col-3 mr-5' %>

        <%= f.label :first_name_kana, "(メイ)" %>
        <%= f.text_field :first_name_kana, placeholder: "ミチコ", class: 'col-3' %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス", class: 'col-3' %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "sample@sample", class: 'col-3 ml-5' %>
    </div>

    <div class="form-group">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: 'col-3' %>
      <%= f.text_field :postal_code, placeholder: "0000000", class: 'col-3 ml-5' %>
    </div>

    <div class="form-group">
      <%= f.label :address, "住所", class: 'col-3' %>
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: 'col-7 ml-5' %>
    </div>

    <div class="form-group">
      <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: 'col-3' %>
      <%= f.text_field :telephone_number, placeholder: "00000000000", class: 'col-3 ml-5' %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード(6文字以上)", class: 'col-3' %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'col-3 ml-5' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "パスワード(確認用)", class: 'col-3' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'col-3 ml-5' %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: 'btn btn-success col-3' %>
    </div>
  <% end %>
</div>


  <h2>既に登録済みの方</h2>
  <div class="row m-5">
      <%= render "public/customers/shared/links" %>
  </div>

</div>
