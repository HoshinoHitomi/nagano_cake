<div class="container mt-4">
  <%= render 'layouts/error_messages', model: @item %>

  <h3>商品編集</h3>
  <div class="row m-4">

    <div class="col-3"></div>

    <div class="col-6">

      <%= form_with model: @item, url: admin_item_path(@item), local:true do |f| %>

      <div class="form-horizontal">

          <div class="form-group">
            <%= f.label :image, "商品画像", class: 'col-5' %>
            <%= f.attachment_field :image %>
          </div>

          <div class="form-group">
            <%= f.label :name, "商品名", class: 'col-5' %>
            <%= f.text_field :name %>
          </div>

          <div class="form-group">
            <%= f.label :introduction, "商品説明", class: 'col-5' %>
            <%= f.text_area :introduction %>
          </div>

          <div class="form-group">
            <%= f.label :genre, "ジャンル", class: 'col-5' %>
            <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
          </div>

          <div class="form-group">
            <%= f.label :price, "税抜価格", class: 'col-5' %>
            <%= f.text_field :price %>円
          </div>

          <div class="form-group">
            <%= f.label :is_active, "販売ステータス", class: 'col-5' %>
              <%= f.radio_button :is_active, :true %>
              <%= f.label :is_active, '販売中' %>

              <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active, '販売停止中' %>
          </div>

          <%= f.submit "変更を保存", class: 'btn btn-success', style: "display:block; margin: 0 auto;" %>

        <% end %>
    </div>

    <div class="col-3"></div>
  </div>

</div>