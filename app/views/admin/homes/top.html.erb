<div class="container mt-4">
  <h3>注文履歴一覧</h3>

  <table class="table m-4">
    <tr class="table-light">
      <th style="width: 20%">購入日時</th>
      <th style="width: 25%">購入者</th>
      <th style="width: 20%">注文個数</th>
      <th style="width: 20%">注文ステータス</th>
    </tr>

    <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
      <td><%= order.customer.name %></td>
      <td><%= order.order_items.sum(:amount) %></td>
      <td><%= order.status_i18n %></td>
    </tr>
    <% end %>
  </table>

</div>