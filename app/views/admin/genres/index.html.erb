<div class="container mt-4">
  <%= render 'layouts/error_messages', model: @genre %>

  <h3>ジャンル一覧・追加</h3>

  <div class="row m-4">
    <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
      <%= f.label :name, 'ジャンル名', class: 'col-4' %>
      <%= f.text_field :name, placeholder: 'ジャンル名', class: 'col-4' %>
      <%= f.submit "新規登録", class: 'btn btn-success col-3 ml-4' %>
    <% end %>
  </div>

  <div class="row">
    <table class="table col-4">
      <tr class="thead-light">
        <th>ジャンル</th>
        <th></th>
      </tr>

      <% Genre.all.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>