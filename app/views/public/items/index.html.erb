<div class="container mt-4">
  <div class="row">
    <div class="col-3">
      <%= render 'public/genre', genres: @genres %>
    </div>

    <div class="col-9">

        <h2 style="display: inline;">商品一覧</h2>

        <span>(全<%= @all_items.count %>件)</span>

        <div class="d-flex flex-wrap">
          <% @items.each do |item| %>

          <div class="box">
            <%= link_to item_path(item) do %>
              <%= attachment_image_tag item, :image, :fill, 150, 120, class: 'm-4' %>
            <% end %><br>

              <h6><%= item.name %></h6>

              <h6>￥<%= item.price.to_s(:delimited) %></h6>

          </div>

          <% end %>
        </div>
    </div>

  </div>
</div>

<%= paginate @items %>
