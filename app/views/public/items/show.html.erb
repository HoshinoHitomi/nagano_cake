<div class="container mt-4">
    <div class="row">
        <div class="col-3">
            <%= render 'public/genre', genres: @genres %>
        </div>

        <div class="col-9">

            <div class="row">
                </div>
                <%= attachment_image_tag @item, :image, :fill, 300, 210 %>

                <h2><%= @item.name %></h2>

                <%= @item.introduction %><br>

                ￥<%= @item.add_tax_price.to_s(:delimited) %>(税込)

                <%= form_with url: cart_items_path, method: :post, local:true do |f| %>
                    <%= f.number_field :amount, min: 1, placeholder: "個数選択" %>

                    <%= hidden_field_tag :item_id, @item.id %>
                    <%= hidden_field_tag :price, @item.price %>

                    <%= f.submit "カートに入れる", class: 'btn btn-success' %>
                <% end %>

        </div>
    </div>
</div>
