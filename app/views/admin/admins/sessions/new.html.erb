<div class="container mt-4">
  <h3>管理者ログイン</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-horizontal m-4">
        <div class="form-group">
          <%= f.label :email, "メールアドレス", class: 'col-3 offset-2' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'example@example', class: 'col-6' %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード", class: 'col-3 offset-2' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'col-6' %>
        </div>

        <div class="form-group">
          <%= f.submit "ログイン", class: 'btn btn-primary col-2 offset-5' %>
        </div>
      </div>

    <% end %>

</div>